<script>
    let ctx = [];
    for (var i = 1; i <= 5; i++) {
        var ctx1 = document.getElementById(`myChart${i}`).getContext('2d');
        ctx.push(ctx1)
    }

    function get(id) {
        var _lb1 = document.getElementsByClassName(`lb${id}`)
        var lb1 = []
        for (var item of _lb1) {
            lb1.push(item.innerHTML)
        }

        var _val1 = document.getElementsByClassName(`val${id}`)
        var val1 = []
        for (var item of _val1) {
            val1.push(parseFloat(item.innerHTML))
        }

        return {
            lb: lb1,
            val: val1
        }
    }

    var c1 = get(1)
                

    var chart1 = new Chart(ctx[0], {

        type: 'line',
        data: {

            labels: c1.lb,
            datasets: [{
                label: 'Doanh thu theo tháng',
                data: c1.val,
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        }
    });

    
    var c2 = get(2)
