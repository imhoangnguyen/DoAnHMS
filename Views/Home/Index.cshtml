    var _bg = []
    var c3 = get(3)
    for (var i = 0; i < c3.lb.length; i++) {
        _bg.push(colorNames[i % colorNames.length])
    }

    
    new Chart(ctx[2], {
        type: 'pie',
        data: {
            labels: c3.lb,
            datasets: [{
                data: c3.val,
                backgroundColor: _bg
            }]
        }
    });


    
    var _bg1 = []
    var c4 = get(4)
    for (var i = 0; i < c3.lb.length; i++) {
        _bg1.push(colorNames[i % colorNames.length])
    }

    new Chart(ctx[3], {

        type: 'doughnut',
        data: {

            labels: c4.lb,
            datasets: [{
                data: c4.val,
                backgroundColor: _bg1
            }]
        }
    });
    var c5 = get(5)
    new Chart(ctx[4], {

        type: 'radar',
        data: {

            labels: c5.lb,
            datasets: [{
                label: 'Radar Chart Example',
                data: c5.val,
